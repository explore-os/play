{
  "name": "Actor Playground",
  "image": "hardliner66/eos:latest",
  "workspaceMount": "source=${localWorkspaceFolder},target=/eos/workspace,type=bind",
  "workspaceFolder": "/eos",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "files.exclude": {
          "**/.devcontainer": true,
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/.DS_Store": true,
          "**/Thumbs.db": true
        }
      },
      "extensions": [
        "udoprog.rune-vscode"
      ]
    }
  },
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer",
  "postStartCommand": "rm /eos/.pid; $(setsid /usr/local/bin/supervisor); eos spawn-script /eos/workspace/examples/test-actor.rn"
}