{
  "name": "Actor Playground",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "eos",
  "runServices": [
    "msgbus",
    "eos",
    "otelcol",
    "prometheus",
    "grafana"
  ],
  "forwardPorts": [3000, 9090, 4317, 4318],
  "workspaceFolder": "/explore",
  "customizations": {
    "vscode": {
      "settings": {
        "actionButtons": {
          "commands": [
            {
              "name": "$(triangle-right) Ping Pong Demo",
              "command": "/explore/demos/ping-pong.sh"
            },
            {
              "name": "Pause System",
              "command": "/usr/local/bin/eos pause /explore",
              "color": "orange"
            },
            {
              "name": "Unpause System",
              "command": "/usr/local/bin/eos unpause /explore",
              "color": "green"
            },
            {
              "name": "Kill All Actors",
              "command": "/usr/local/bin/eos kill /explore/actors/*",
              "color": "red"
            }
          ],
          "defaultColor": "white",
          "reloadButton": "â†»",
          "loadNpmCommands": false
        },
        "terminal.integrated.defaultProfile.linux": "fish",
        "files.exclude": {
          "/explore/persist/nats": true,
          "**/.devcontainer": true,
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/.DS_Store": true,
          "**/Thumbs.db": true
        }
      },
      "extensions": [
        "udoprog.rune-vscode",
        "seunlanlege.action-buttons"
      ]
    }
  }
  ,
  "postCreateCommand": "echo 'Grafana: http://localhost:3000 (user: admin, password: admin)'; echo 'Prometheus: http://localhost:9090'; echo 'OTLP endpoints: 4317 (gRPC), 4318 (HTTP)'"
}