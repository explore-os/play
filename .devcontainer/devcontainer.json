{
    "name": "Actor Playground",
    "image": "hardliner66/eos",
    "capAdd": ["SYS_ADMIN"],
    "workspaceFolder": "/explore",
    "workspaceMount": "type=bind,source=${localWorkspaceFolder}/workspace,target=/explore/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "actionButtons": {
                    "commands": [
                        {
                            "name": "$(triangle-right) Ping Pong Demo",
                            "command": "/explore/demos/ping-pong.sh"
                        },
                        {
                            "name": "Pause System",
                            "command": "/usr/local/bin/eos pause",
                            "color": "orange"
                        },
                        {
                            "name": "Unpause System",
                            "command": "/usr/local/bin/eos unpause",
                            "color": "green"
                        },
                        {
                            "name": "Kill All Actors",
                            "command": "/usr/local/bin/eos kill /explore/system/actors/*",
                            "color": "red"
                        }
                    ],
                    "defaultColor": "white",
                    "reloadButton": "â†»",
                    "loadNpmCommands": false
                },
                "terminal.integrated.defaultProfile.linux": "fish",
                "files.exclude": {
                    "**/.devcontainer": true,
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true
                }
            },
            "extensions": ["udoprog.rune-vscode", "seunlanlege.action-buttons"]
        }
    },
    "postCreateCommand": "/ext/install-private-vsix.sh"
}
