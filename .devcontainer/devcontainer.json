{
  "name": "Actor Playground",
  "image": "hardliner66/eos:latest",
  "workspaceMount": "source=${localWorkspaceFolder}/persist,target=/eos/persist,type=bind",
  "workspaceFolder": "/eos",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "files.exclude": {
          "**/.devcontainer": true,
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/.DS_Store": true,
          "**/Thumbs.db": true
        }
      },
      "extensions": [
        "udoprog.rune-vscode"
      ]
    }
  },
  "shutdownAction": "stopContainer",
  "postStartCommand": "rm -f /eos/.pid; setsid /usr/local/bin/supervisor"
}